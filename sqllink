import java.sql.*;

public class MovieRecommendation {
    public static void main(String[] args) {
        Connection conn = null;
        PreparedStatement pstmt = null;
        ResultSet rs = null;

        try {
            // Connect to the database
            conn = DriverManager.getConnection("jdbc:mysql://localhost:3306/imdb", "username", "password");

            // Prepare the SQL query
            String sql = "SELECT title, year, genre FROM movies WHERE rating >= ?";
            pstmt = conn.prepareStatement(sql);
            pstmt.setDouble(1, 8.0);

            // Execute the query
            rs = pstmt.executeQuery();

            // Iterate over the result set and print the movie information
            while (rs.next()) {
                String title = rs.getString("title");
                int year = rs.getInt("year");
                String genre = rs.getString("genre");
                System.out.println(title + " (" + year + ") - " + genre);
            }
        } catch (SQLException e) {
            e.printStackTrace();
        } finally {
            // Close the database resources
            try {
                if (rs != null) rs.close();
                if (pstmt != null) pstmt.close();
                if (conn != null) conn.close();
            } catch (SQLException e) {
                e.printStackTrace();
            }
        }
    }
}

